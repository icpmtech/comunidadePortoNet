@model CommunityNetPortoAngular.Models.ResumeUser

@{
    ViewBag.Title = "Meu perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (Model != null)
{
    <section id="profile_resume">
        <div class="wrapper">
            <div class="sidebar-wrapper">
                <div class="profile-container">
                    <img class="profile img-responsive img-circle" src="@Model.ImageURL" width="100" height="100" alt="" />
                    <h1 class="name">@Model.Name</h1>

                    <h3 class="tagline">@Model.TagLine</h3>
                </div><!--//profile-container-->

                <div class="contact-container container-block">
                    <ul class="list-unstyled contact-list">
                        <li class="email"><i class="fa fa-envelope"></i><a href="mailto: @Model.ApplicationUser.Email">@Model.ApplicationUser.Email</a></li>
                        <li class="phone"><i class="fa fa-phone"></i><a href="tel:@Model.Phone">@Model.Phone</a></li>
                        <li class="website"><i class="fa fa-globe"></i><a href="@Model.PortfolioSite" target="_blank">@Model.PortfolioSite</a></li>
                        <li class="linkedin"><i class="fa fa-linkedin"></i><a href="@Model.Linkedin" target="_blank">@Model.Linkedin</a></li>
                        <li class="github"><i class="fa fa-github"></i><a href="@Model.GitHub" target="_blank">@Model.GitHub</a></li>
                        <li class="twitter"><i class="fa fa-twitter"></i><a href="https://twitter.com/@Model.Twitter" target="_blank">@Model.Twitter</a></li>
                    </ul>
                </div><!--//contact-container-->
                <div class="education-container container-block">
                    <h2 class="container-block-title">Habilitações literárias</h2>
                    @if (Model.Educations != null)
                    {
                        foreach (var item in Model.Educations)
                        {
                            <div class="item">
                                <h4 class="degree">@item.Title</h4>
                                <h5 class="meta">@item.Description</h5>
                                <div class="time">@item.StartedOn.GetValueOrDefault().ToShortDateString() - @item.Dob.GetValueOrDefault().ToShortDateString()</div>
                            </div><!--//item-->
                        }
                    }

                </div><!--//education-container-->

                <div class="languages-container container-block">
                    <h2 class="container-block-title">Linguas</h2>
                    <ul class="list-unstyled interests-list">
                        @if (Model.Languages != null)
                        {
                            foreach (var item in Model.Languages)
                            {
                                <li>@item.Description <span class="lang-desc">@item.Value</span></li>

                            }
                        }
                    </ul>
                </div><!--//interests-->

                <div class="interests-container container-block">
                    <h2 class="container-block-title">Interesses</h2>
                    <ul class="list-unstyled interests-list">
                        @if (Model.Interests != null)
                        {
                            foreach (var item in Model.Interests)
                            {

                                <li>@item.Description</li>
                            }
                        }

                    </ul>
                </div><!--//interests-->

            </div><!--//sidebar-wrapper-->

            <div class="main-wrapper">

                <section class="section summary-section">
                    <h2 class="section-title"><i class="fa fa-user"></i>Perfil de Carreira</h2>
                    <div class="summary">
                        <p>@Model.CareerProfile</p>
                    </div><!--//summary-->
                </section><!--//section-->

                <section class="section experiences-section">
                    <h2 class="section-title"><i class="fa fa-briefcase"></i>Experiência Profissional</h2>
                    @if (Model.Experiences != null)
                    {
                        foreach (var item in Model.Experiences)
                        {
                            <div class="item">
                                <div class="meta">
                                    <div class="upper-row">
                                        <h3 class="job-title">@item.Title</h3>
                                        <div class="time">@item.StartedOn.GetValueOrDefault().ToShortDateString() - @item.Dob.GetValueOrDefault().ToShortDateString()</div>
                                    </div><!--//upper-row-->
                                    <div class="company">@item.TagLine</div>
                                </div><!--//meta-->
                                <div class="details">
                                    <p>@item.Description</p>
                                </div><!--//details-->
                            </div><!--//item-->
                        }
                    }


                </section><!--//section-->

                <section class="section projects-section">
                    <h2 class="section-title"><i class="fa fa-archive"></i>Projetos</h2>



                    @if (Model.Projects != null)
                    {
                        foreach (var item in Model.Projects)
                        {
                            <div class="item">
                                <span class="project-title">
                                    <a href="@item.Link??#" target="_blank">@item.Title</a>
                                </span> -
                                <span class="project-tagline">@item.Name</span>
                            </div><!--//item-->
                        }
                    }

                </section><!--//section-->

                <section class="skills-section section">
                    <h2 class="section-title"><i class="fa fa-rocket"></i>Competências &amp; Valorização</h2>
                    <div class="skillset">

                        @if (Model.Skills != null)
                        {
                            foreach (var item in Model.Skills)
                            {<div class="item">
                                <h3 class="level-title">@item.Name</h3>
                                <div class="level-bar">
                                    <div class="level-bar-inner" data-level="@item.Value%">
                                    </div>
                                </div><!--//level-bar-->
                            </div><!--//item-->
                            }
                        }




                    </div>
                </section><!--//skills-section-->

            </div><!--//main-body-->
        </div>

    </section>

}
else
{ <h1>O utilizador não tem um perfil criado.</h1>

}











@section Scripts {


    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="/assets/css/styles.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/bundles/jqueryval")

    <!-- custom js -->
    <script type="text/javascript" src="/assets/js/main.js"></script>
}

