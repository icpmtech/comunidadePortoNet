@{
    ViewBag.Title = "Edit";
    Layout = null;
}


    <div class="well">
        <h2 class="text-center">Editar Linguagens</h2>
        <div class="example">
            <table id="editing-example-languages" class="table" data-paging="true" data-filtering="false" data-sorting="true">
                <thead>
                    <tr>
                        <th data-name="id" data-breakpoints="xs" data-type="number">ID</th>
                        <th data-name="jobTitle">Nome da linguagem</th>
                        <th data-name="subTitle" data-breakpoints="xs">Valor</th>
                      </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
            <div class="modal fade" id="editor-modal-languages" tabindex="-1" role="dialog" aria-labelledby="editor-title-languages">

                <div class="modal-dialog" role="document">
                    <form class="modal-content form-horizontal" id="editor-languages">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <h4 class="modal-title" id="editor-title-languages">Nova linguagem</h4>
                        </div>
                        <div class="modal-body">
                            <input type="number" id="id" name="id" class="hidden" />
                            <div class="form-group required">
                                <label for="firstName" class="col-sm-3 control-label">Nome linguagem</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Titulo do linguagem" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="jobTitle" class="col-sm-3 control-label">Valor da linguagem</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="jobTitle" name="jobTitle" placeholder="Titulo do linguagem">
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Guardar alterações</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>

