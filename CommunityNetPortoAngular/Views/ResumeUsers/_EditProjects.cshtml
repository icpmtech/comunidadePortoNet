@{
    ViewBag.Title = "Edit";
    Layout = null;
}


    <div class="well">
        <h2 class="text-center">Editar projetos</h2>
        <div class="example">
            <table id="editing-example-projects" class="table" data-paging="true" data-filtering="false" data-sorting="true">
                <thead>
                    <tr>
                        <th data-name="id" data-breakpoints="xs" data-type="number">ID</th>
                        <th data-name="description">Descrição</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
            <div class="modal fade" id="editor-modal-projects" tabindex="-1" role="dialog" aria-labelledby="editor-title-projects">

                <div class="modal-dialog" role="document">
                    <form class="modal-content form-horizontal" id="editor-projects">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <h4 class="modal-title" id="editor-title-projects">Novo projeto</h4>
                        </div>
                        <div class="modal-body">
                            <input type="number" id="id" name="id" class="hidden" />

                            <div class="form-group required">
                                <label for="description" class="col-sm-3 control-label">Descrição do projeto</label>
                                <div class="col-sm-9">
                                    <textarea  cols="40" rows="5"  class="form-control" id="description" name="description" placeholder="Descrição do projeto" required ></textarea>

                                </div>
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Guardar alterações</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>

