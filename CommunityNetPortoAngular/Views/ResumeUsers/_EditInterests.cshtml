@{
    ViewBag.Title = "Edit";
    Layout = null;
}


<div class="well">
    <h2 class="text-center">Editar interesses</h2>
    <div class="example">
        <table id="editing-example-interestes" class="table" data-paging="true" data-filtering="false" data-sorting="true">
            <thead>
                <tr>
                    <th data-name="ID" data-breakpoints="xs" data-type="number">ID</th>
                    <th data-name="Description">Nome do interesse</th>

                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="modal fade" id="editor-modal-interestes" tabindex="-1" role="dialog" aria-labelledby="editor-title-interestes">

            <div class="modal-dialog" role="document">
                <form class="modal-content form-horizontal" id="editor-interestes">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title" id="editor-title-interestes">Novo interesse</h4>
                    </div>
                    <div class="modal-body">
                        <input type="number" id="ID" name="ID" class="hidden" />
                        <div class="form-group required">
                            <label for="Description" class="col-sm-3 control-label">Nome do interesse</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="Description" name="Description" placeholder="Nome do interesse" required>
                            </div>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar alterações</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

